#wrap.container
  .row
    .col-md-6.col-md-offset-3
      .h1 Sign up
      %p.lead It's free and always will be.
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-vertical'}) do |f|
        = f.error_notification
        = display_base_errors resource
        = f.input :email, required: true, placeholder: 'Email'
        = f.input :password, required: true, placeholder: 'Password'
        = f.input :password_confirmation, required: true, placeholder: 'Confirm password'
        %p
          By clicking Sign Up, you agree to our #{link_to 'Terms of Service', terms_of_service_path} and that you have read our #{link_to 'Privacy page', privacy_path}.
        = f.button :submit, 'Sign up', class: 'btn-primary'
      %hr
      .well
        = render "devise/shared/links"
