<!DOCTYPE html>
<html lang="en">
  <%= render 'layouts/head' %>
  <body>
    <%= render 'layouts/nav_bar' %>
    <div class="container">
      <%= render 'layouts/breadcrumb' %>
      <%= render partial: 'layouts/flash' %>
      <%- if current_user && current_user.username.blank? -%>
        <div class="alert alert-info">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <%= content_tag :div, id: "flash_info" do %>
            Looks like your username is blank. Click to <%= link_to 'set your username', edit_profile_path(current_user), class: 'btn btn-default' %>
          <%- end -%>
        </div>
      <%- end -%>
      <%= yield %>
    </div>
    <%= render 'layouts/footer' %>
  </body>
</html>
