= content_for(:rss) do
  = auto_discovery_link_tag(:rss, networks_url(format: :rss))
= content_for :breadcrumb do
  %li User-Group Networks
= content_for :twitter_card do
  %meta{content: "summary", name: "twitter:card"}
  %meta{content: "@uglst", name: "twitter:site"}
  %meta{content: "User-Group List", name: "twitter:title"}
  %meta{content: "Discover User-Group community in your backyard and around the world on UGl.st", name: "twitter:description"}
  %meta{content: "@uglst", name: "twitter:creator"}
  %meta{content: "https://pbs.twimg.com/profile_images/2343634389/isvctl4ndfajfittw3px.png", name: "twitter:image:src"}
  %meta{content: "https://ugl.st", name: "twitter:domain"}
%ul.media-list
  - @networks.each do |network|
    %li.media
      = link_to network, class: 'pull-left' do
        = image_tag network.logo.present? ? network.logo_url : asset_path('network_avatar_fallback.png'), class: 'media-object', style: 'max-height: 64px; max-width: 64px;'
      .media-body
        %h4= network.name
        %p.description= Sanitize.clean(network.description, Sanitize::Config::BASIC).truncate(140)
        %div{style: "margin-top: 8px;"}= link_to 'Full-profile', network
%br/
= link_to 'Register an User-Group', new_network_path, class: 'btn btn-default'
