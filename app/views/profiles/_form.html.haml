%h2 Account info
= simple_form_for(@user, as: :user, url: profile_path(@user)) do |f|
  = field_set_tag 'Account Info' do
    = f.input :username, placeholder: 'yourusername'
    = gravatar_image_tag(@user.email, alt: @user.profile.full_name, alt: @user.profile.full_name, id: 'gravatar')
    = f.input :email, placeholder: 'me@example.com'
  .actions= f.submit 'Update Account Info', class: 'btn btn-primary'

%h2 Profile
= simple_form_for :profile do |f|
  = field_set_tag 'Public Info' do
    = f.input :first_name
    = f.input :last_name
    = f.input :bio, as: :string, placeholder: 'Quick introduction for you to say "Hi!" and tell people a little bit about yourself.'
    = f.input :interests, as: :string, placeholder: 'ruby, devops, linux'
    %p.help-block
      Comma separated list of interests.
  = field_set_tag 'Online Info' do
    = f.input :homepage, placeholder: 'http://www.example.com'
    = f.input :twitter, placeholder: '@ugtastic'
  = field_set_tag 'Geographic Info' do
    = f.input :address, required: true, placeholder: '614 18th Ave Menlo Park, CA 94025', hint: 'As much of the address as you know. Please provide at least the city, state/region/provice, and country.'
  .actions= f.submit 'Update Profile', class: 'btn btn-primary'
